<mah:MetroWindow x:Class="RC_FE_Design___Analysis_and_synthesis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        GlowBrush="{DynamicResource HighlightBrush}"
        xmlns:local="clr-namespace:RC_FE_Design___Analysis_and_synthesis"
        mc:Ignorable="d"
        Title="RC-FE Design - Analysis and synthesis" 
        Height="600" Width="800" 
        MinHeight="450"  MinWidth="800" 
        WindowState="Maximized">

    <Grid>

        <Border>
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource AccentColor4}"/>
            </Border.Background>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
   
    </Grid>
</mah:MetroWindow>
