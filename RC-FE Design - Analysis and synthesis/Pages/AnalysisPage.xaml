<Page
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RC_FE_Design___Analysis_and_synthesis.Pages"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:editor="clr-namespace:RC_FE_Design___Analysis_and_synthesis.FEEditor"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        Dialog:DialogParticipation.Register="{Binding}"
        x:Class="RC_FE_Design___Analysis_and_synthesis.Pages.AnalysisPage"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="Page2">

    <Page.Resources>
        <Style x:Key="radioButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <ToggleButton IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                        Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="{DynamicResource AccentColorBrush2}">
            <MenuItem Header="Файл" >
                <MenuItem x:Name="FileNew" Header="Новая структура" InputGestureText="Ctrl+N"/>
                <MenuItem x:Name="FileOpen" Header="Открыть" InputGestureText="Ctrl+O"/>
                <MenuItem x:Name="FileSave" Header="Сохранить" InputGestureText="Ctrl+S"/>
                <MenuItem x:Name="Export" Header="Экспорт значений"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Grid.RowSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <Button DockPanel.Dock="Left" HorizontalAlignment="Left" Content="На главную" Command="{Binding GoToMainPageCommand}" Padding="5"  Margin="5" FontSize="14"/>
                <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Content="Пересчитать"  Padding="5"  Margin="5" FontSize="14"/>
            </DockPanel>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid x:Name="canvasContainer" Visibility="{Binding CanvasVisibility}" Margin="5,0,5,0">

                    <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}">
                        <DockPanel>
                            
                            <ToolBarTray DockPanel.Dock="Left" Orientation="Vertical">
                                <ToolBar Margin="0,5,0,0">
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button0.png" />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Нумерация КП"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button1.png"  />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Разрез"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image  Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button2.png" />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="RC-ячейка"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button3.png"  />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="R-ячейка"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button4.png"  />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Контактная площадка"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image  Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button5.png" />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Запрет КП"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    
                                    <RadioButton Style="{StaticResource radioButtonStyle}">
                                        <Image Margin="0" Height="38" Width="38" Source="pack://application:,,,/Resources/button6.png"  />
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Шунт"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                </ToolBar>
                            </ToolBarTray>

                            <editor:FEControl  DockPanel.Dock="Right"/>

                        </DockPanel>
                    </Border>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">

                        <Button Content="Новая структура" Command="{Binding NewStructureCommand}" FontWeight="Bold" FontSize="14" Padding="5"  Margin="5,5,5,2"/>
                        <Button Content="Открыть структуру" Command="{Binding OpenStructureCommand}" FontWeight="Bold" FontSize="14" Padding="5" Margin="5,5,5,2" />
                        <Button Content="Загрузить структуру из синтеза" Command="{Binding LoadStructureFromSynthesisCommand}" FontWeight="Bold" FontSize="14" Padding="5" Margin="5,5,5,2" />

                    </StackPanel>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger  Binding="{Binding ElementName=canvasContainer, Path=Visibility}" Value="Collapsed" >
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger  Binding="{Binding ElementName=canvasContainer, Path=Visibility}" Value="Visible" >
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                </Grid>

                <Expander Grid.Column="2" Grid.RowSpan="2" ExpandDirection="Left" IsExpanded="True">
                    <TabControl Grid.IsSharedSizeScope="True" >
                        <TabItem Header="Проект" mah:ControlsHelper.HeaderFontSize="16">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition SharedSizeGroup="tabItemWidth"/>
                                    </Grid.ColumnDefinitions>

                                    <TreeView/>

                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Структура" mah:ControlsHelper.HeaderFontSize="16">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="tabItemWidth"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>

                                    <GroupBox Header="Сетка">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Количество ячеек по горизонтали"/>
                                                <TextBox Grid.Column="1" MinWidth="50" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Количество ячеек по вертикали"/>
                                                <TextBox Grid.Column="1" MinWidth="50" MaxWidth="80"/>
                                            </Grid>
                                        </StackPanel>
                                    </GroupBox>

                                    <GroupBox Header="Параметры">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="R"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="C"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Kf"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="G"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="H"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="N"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="P"/>
                                                <TextBox Grid.Column="1" MinWidth="30" MaxWidth="80"/>
                                            </Grid>
                                        </StackPanel>
                                    </GroupBox>

                                    <GroupBox Header="Маска">
                                        <StackPanel>
                                                <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Режим редактирования"/>
                                                <CheckBox Grid.Column="1" HorizontalAlignment="Center"/>
                                            </Grid>
                                        </StackPanel>
                                    </GroupBox>

                                </StackPanel>

                            </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Настройки" mah:ControlsHelper.HeaderFontSize="16">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition SharedSizeGroup="tabItemWidth"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <GroupBox Header="Частоты">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Минимальное значение частоты"/>
                                                    <TextBox Grid.Column="1" MinWidth="50" MaxWidth="80"/>
                                                </Grid>
                                                <Grid Margin="0,0,0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Максимальное значение частоты"/>
                                                    <TextBox Grid.Column="1" MinWidth="50" MaxWidth="80"/>
                                                </Grid>
                                                <Grid Margin="0,0,0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Число точек"/>
                                                    <TextBox Grid.Column="1" MinWidth="50" MaxWidth="80"/>
                                                </Grid>
                                                <GroupBox Header="Распределение точек">
                                                    <StackPanel Orientation="Horizontal">
                                                        <RadioButton Content="Линейно" Margin="0,0,5,0"/>
                                                        <RadioButton Content="Логарифмически" Margin="0,0,5,0" IsChecked="True"/>
                                                    </StackPanel>
                                                </GroupBox>
                                            </StackPanel>
                                        </GroupBox>
                                        <GroupBox Header="Схема включения">
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox Grid.Column="0" Margin="0,0,0,5"/>
                                                    <ComboBox Grid.Column="1" Margin="0,0,0,5"/>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Число КП"/>
                                                    <TextBlock Grid.Column="1" Margin="0,0,0,5"/>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Формула"/>
                                                    <TextBox Grid.Column="1" Margin="0,0,0,5"/>
                                                </Grid>
                                                <Button Content="Редактор схем"/>
                                            </StackPanel>
                                        </GroupBox>
                                        <GroupBox Header="Годограф">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" SharedSizeGroup="paramTextBlockWidth"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="0,0,5,0" Text="Включить"/>
                                                    <CheckBox x:Name="hodographSwitchCheckBox" Grid.Column="1" HorizontalAlignment="Center"/>
                                                </Grid>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" IsEnabled="{Binding Path=IsChecked, ElementName=hodographSwitchCheckBox}">
                                                    <TextBlock Padding="0,0,5,0" Text="К: от"/>
                                                    <TextBox MinWidth="50" MaxWidth="80"/>
                                                    <TextBlock Padding="5,0,5,0" Text="до"/>
                                                    <TextBox MinWidth="50" MaxWidth="80"/>
                                                    <TextBlock Padding="5,0,5,0" Text="точек"/>
                                                    <TextBox MinWidth="50" MaxWidth="80"/>
                                                </StackPanel>
                                                <Grid Margin="0,0,0,5" IsEnabled="{Binding Path=IsChecked, ElementName=hodographSwitchCheckBox}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Grid.Column="0" Content="Нули" Margin="0,0,5,0"/>
                                                    <CheckBox Grid.Column="1" Content="Полюса" Margin="0,0,5,0"/>
                                                    <CheckBox Grid.Column="2"  Content="Линии" Margin="0,0,5,0"/>
                                                </Grid>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Expander>

            </Grid>

        </Grid>

    </Grid>

</Page>
