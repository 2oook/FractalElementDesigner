<UserControl x:Class="FractalElementDesigner.SchemeEditing.Elements.FElementControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:FractalElementDesigner.SchemeEditing.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="120">

    <Canvas x:Name="mainElementCanvas" Width="{StaticResource FEElementWidthKey}" Height="{StaticResource FEElementHeightKey}" Style="{StaticResource ControlCanvasStyleKey}">

        <Canvas x:Name="RootElement" Width="{StaticResource FEElementWidthKey}" Height="{StaticResource FEElementHeightKey}" Style="{StaticResource RootCanvasStyleKey}">
            <Path Data="M 0,0 L 120,0 M 0,60 L 120,60 M 0,0 L 0,60 M 120,0 L 120,60" Style="{StaticResource ElementPathStyleKey}" />
            <Grid Width="120" Height="60">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Path=ElementText}" Style="{StaticResource LogicTextStyleKey}"/>
            </Grid>
        </Canvas>

        <controls:PinThumb x:Name="LeftTopPin"  Uid="LeftTopPin" Canvas.Left="-15" Canvas.Top="15"
                           Template="{StaticResource PinThumbControlTemplateKey}"
                           Style="{StaticResource PinThumbStyleKey}"/>

        <Line Canvas.Left="-15" Canvas.Top="15" X1="0" Y1="0" X2="15" Y2="0" Stroke="Black" />

        <controls:PinThumb x:Name="RightTopPin" Uid="RightTopPin" Canvas.Left="135" Canvas.Top="15" 
                           Template="{StaticResource PinThumbControlTemplateKey}"
                           Style="{StaticResource PinThumbStyleKey}"/>

        <Line Canvas.Left="135" Canvas.Top="15" X1="0" Y1="0" X2="-15" Y2="0" Stroke="Black" />

        <controls:PinThumb x:Name="LeftBottomPin" Uid="LeftBottomPin" Canvas.Left="-15" Canvas.Top="45" 
                           Template="{StaticResource PinThumbControlTemplateKey}"
                           Style="{StaticResource PinThumbStyleKey}"/>

        <Line Canvas.Left="-15" Canvas.Top="45" X1="0" Y1="0" X2="15" Y2="0" Stroke="Black" />

        <controls:PinThumb x:Name="RightBottomPin" Uid="RightBottomPin" Canvas.Left="135" Canvas.Top="45" 
                           Template="{StaticResource PinThumbControlTemplateKey}"
                           Style="{StaticResource PinThumbStyleKey}"/>

        <Line Canvas.Left="135" Canvas.Top="45" X1="0" Y1="0" X2="-15" Y2="0" Stroke="Black" />

    </Canvas>
    
</UserControl>
